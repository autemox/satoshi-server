      flex-direction: column;
      gap: 10px;
      align-items: center;
      user-select: none;
    }
  
    .toolbar-group {
      background: #333;
      border-radius: 8px;
      padding: 6px;
      display: flex;
      gap: 6px;
    }
  
    .vertical-group {
      flex-direction: column;
      width: 32px;
      align-items: center;
    }
  
    .action-button {
      font-size: 10px;
      padding: 4px 6px;
      background: transparent;
      color: white;
      border: none;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 4px;
      font-family: Arial, sans-serif;
      white-space: nowrap;
    }
    
    .tool-button, .animate-mode-button {
      font-size: 20px;
      padding: 4px;
      background: transparent;
      color: white;
      border: none;
      cursor: pointer;
    }

    .tool-button.active, .animate-mode-button.active {
      background: #444;
      border-radius: 4px;
    }
    
    .tool-button, .clipboard-mode-button {
